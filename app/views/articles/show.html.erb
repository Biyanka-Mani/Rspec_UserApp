<h2 class="text-center mt-5"><%=@article.name%></h2>
<div class="container">
    <div class="mx-auto">
        <div class="row justify-content-center mt-4 ">
            <div class="col-8 mt-4">
                <div class="card text-center shadow  mb-5 bg-body-tertiary rounded">
                    <div class="card-header fst-italic">
                      Created By <%= @article.user.first_name if @article.user%>
                     
                      <%if @article.categories.any? %>
                        <div class="mt-2">
                            <%=render @article.categories%>
                         </div> 
                    <% end %> 
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%= link_to @article.name,class:"text-success" %></h5>
                            <% if @article.main_image.attached? %>
                               <%= image_tag @article.main_image, class: "img-thumbnail img-fluid" %>
                            <% else %>
                        <p>No image available</p>
                        <% end %>


                      <div class="card-text text-left"><%=simple_format(@article.description) %></div>
                      <%if user_signed_in? %>
                          <%= link_to 'Edit' ,edit_article_path(@article),class:"btn btn-outline-success"%> 
                          <%=link_to 'Delete', article_path(@article), class:"btn btn-outline-danger",data: { 
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                          } %>
                      <%end%>
                        <% if current_user && @article.user != current_user %>
                            <% if @article.likes.exists?(user: current_user) %>
                                <%= button_to 'Unlike', article_like_path(@article), method: :delete %>
                            <% else %>
                                <%= button_to 'Like', article_like_path(@article), method: :post %>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                      <small>Created <%=time_ago_in_words(@article.created_at)%> ago,Edited <%=time_ago_in_words(@article.updated_at)%> ago</small>
                    </div>
                </div> 
            </div>
            <div class="mb-3">
                
            </div>
        </div>
    </div>
</div>