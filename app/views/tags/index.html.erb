<h1 class="text-center mt-4"> Tags </h1>

<% @tags.each do |tag| %>
    <div class="container">
        <div class="row d-flex justify-content-center mt-4 ">
            <div class="col-4 mt-4">
                
                <div class="card text-center shadow  mb-5 bg-body-tertiary rounded">
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= link_to tag.name_of_tag,tag_path(tag) %>
                        <p class="card-text mt-3"><%=pluralize(tag.articles.count,"articles")%></p>
                    </div>
                   
                    <div class="card-footer text-muted">
                       <small>Created <%=time_ago_in_words(tag.created_at)%> ago</small>
                    </div>

                </div>
                
            </div>
            
        </div>
        
    </div>
<% end %>
