<div class="container">
    <div class="mx-auto">
        <div class="row justify-content-center mt-3">
            <div class="col-10">
                <%# <%= render 'shared/errors',obj:@category%> %>
                <%= form_with model: @category,class:"container shadow p-3 mb-3 bg-black rounded",local: true do |f| %>
                    <div class="form-group row mt-3">
                        <%= f.label :name,"Name Of Category",class:"col-2 col-form-label text-white"%>
                        <div class="col-10 ">
                            <%= f.text_field :name,class:"form-control shadow p-2 bg-body-tertiary rounded",placeholder:"Enter name" %>
                        </div>
                    </div>
                    <div class="form-group  text-center mt-5">
                        <%= f.submit "Submit", class: "btn btn-outline-dark btn-lg my-6 text-white" %>
                    </div> 
                <% end %>
            </div>
            <div class="mb-3">
                <%= link_to '[Cancel and Return Back To Categories Listing]' ,categories_path,class:"row justify-content-center mt-4 text-black" %>
            </div>
        </div>
    </div>
</div>